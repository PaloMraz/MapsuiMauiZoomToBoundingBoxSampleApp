<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="MapsuiMauiZoomToBoundingBoxSampleApp.MainPage">

  <Grid RowDefinitions="10*, 1*">
    <mapsui:MapControl Grid.Row="0" x:Name="_mapControl"></mapsui:MapControl>
    <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center">
      <Button x:Name="_zoomToBoundsButton" Clicked="_zoomToBoundsButton_Clicked"></Button>
    </HorizontalStackLayout>
  </Grid>
</ContentPage>
